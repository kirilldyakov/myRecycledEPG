<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/ll_logo"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <!-- Вертикальный скрол-->
            <ScrollView
                android:id="@+id/VScroll_logo"
                android:layout_width="50dp"
                android:layout_height="0dp"
                android:layout_weight="1"
            android:scrollbars="none">

                <LinearLayout
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:background="@android:color/holo_blue_light"
                    android:orientation="vertical">


                    <LinearLayout

                        android:id="@+id/ll_logos"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="4dp"
                        android:background="@android:color/holo_blue_light"
                        android:orientation="vertical">

                        <TextView
                            style="@style/stlLogo"
                            android:background="@android:color/white"
                            android:text="1111" />

                        <TextView
                            style="@style/stlLogo"
                            android:background="@android:color/white"
                            android:text="2222" />

                        <TextView
                            android:id="@+id/btn3"
                            style="@style/stlLogo"
                            android:background="@android:color/white"
                            android:text="3333" />
                    </LinearLayout>



                </LinearLayout>
            </ScrollView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/time_line_high"
                android:background="@color/ll_time"
                android:text="----"
                android:textColor="@color/colorText" />
        </LinearLayout>

        <HorizontalScrollView
            android:id="@+id/HScroll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/ll_logo">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <!-- Правая часть - программы-->
                <ScrollView
                    android:id="@+id/VScroll_table"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scrollbars="horizontal">

                    <!-- Таблица -->
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true">

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/cannels_recycle_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@android:color/holo_orange_light"
                            android:paddingTop="4dp"
                            android:scrollbars="vertical" />

                        <!-- Курсор-->
                        <View
                            android:id="@+id/time_cursor"
                            android:layout_width="2dp"
                            android:layout_height="0dp"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginLeft="24dp"
                            android:background="@android:color/holo_red_light" />


                    </RelativeLayout>

                </ScrollView>


                <!-- Time Line-->
                <RelativeLayout
                    android:id="@+id/rl_timeline2"
                    android:layout_width="2000dp"
                    android:layout_height="@dimen/time_line_high"
                    android:layout_alignParentBottom="true"
                    android:background="@color/ll_time">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:paddingLeft="0dp"
                        android:text="16:30"
                        android:textColor="@color/colorText" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:paddingLeft="50dp"
                        android:text="16:35"
                        android:textColor="@color/colorText" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:paddingLeft="100dp"
                        android:text="16:40"
                        android:textColor="@color/colorText" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:paddingLeft="150dp"
                        android:text="16:45"
                        android:textColor="@color/colorText" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:paddingLeft="200dp"
                        android:text="16:50"
                        android:textColor="@color/colorText" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:paddingLeft="250dp"
                        android:text="16:55"
                        android:textColor="@color/colorText" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:paddingLeft="300dp"
                        android:text="17:00"
                        android:textColor="@color/colorText" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:paddingLeft="350dp"
                        android:text="17:10"
                        android:textColor="@color/colorText" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:paddingLeft="400dp"
                        android:text="17:15"
                        android:textColor="@color/colorText" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:paddingLeft="450dp"
                        android:text="17:20"
                        android:textColor="@color/colorText" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:paddingLeft="500dp"
                        android:text="17:25"
                        android:textColor="@color/colorText" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:paddingLeft="550dp"
                        android:text="17:30"
                        android:textColor="@color/colorText" />

                </RelativeLayout>
            </LinearLayout>
        </HorizontalScrollView>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:background="@color/ll_controls"
            android:orientation="horizontal">


        </LinearLayout>

    </LinearLayout>


</LinearLayout>
